<!DOCTYPE html>
<html>
  <head>
    <title>LDB</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'reset'%>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="nav-bar-container">
        <div class="nav-bar-content-split">
          <div class="nav-bar-logo">
          </div>
        </div>

        <div class="nav-bar-content-split">
          <ul class="nav">
            <li class="nav-link"><a class="nav-a-active" href="#">Home</a></li>
              <% if user_signed_in? %>
                <li class="nav-link"><a href="#"><%= link_to 'Projects', url_for(:controller => :projects, :method => :index) %></a></li>
                <li class="nav-link"><a href="#">Tasks</a></li>
                <li class="nav-link"><a href="#">Orders</a></li>
                <li class="nav-link"><a href="#">Profile</a></li>
                <li class="nav-link"><a href="#">Search</a></li>
                <li class="nav-link"><a>Signed in as <%= current_user['email'] %></a></li>
                <li class="nav-link"><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
              <% end %>
          <ul>
        </div>
      </div>
    </header>

    <div class="content">
      <div class="content-line">
      <%= yield %>
      </div>
    </div>
  </body>
</html>
